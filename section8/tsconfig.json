{
  "include": ["src"], // src/ 내용을 컴파일 하세요
  "compilerOptions": {
    "target": "ESNext", // 타입스크립트 최신
    "module": "ESNext", // 타입스크립트 최신
    "outDir": "dist", // 컴파일 결과 위치
    "strict": true,
    "moduleDetection": "force", // 타입스크립트 최신
    "moduleResolution": "node", // 노드 모듈 시스템 사용
    "skipLibCheck": true, // "undici-types" 오류 방지
    "allowJs": true, // 자바스크립트 파일 포함
    "noImplicitAny": true // 암시적 any 타입 허용
  },
  "ts-node": {
    "esm": true
  }
}
